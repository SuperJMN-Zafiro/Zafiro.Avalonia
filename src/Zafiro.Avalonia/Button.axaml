<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <ControlTheme x:Key="Transparent" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="Transparent" />
        </ControlTheme>
    </Styles.Resources>

    <Design.PreviewWith>
        <Border Padding="20">
            <Button Content="Transparent" Theme="{StaticResource Transparent}" />
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
</Styles>

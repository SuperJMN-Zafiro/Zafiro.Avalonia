<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:CompileBindings="True">

    <Style Selector=":is(ItemsControl).ShowEmptyContent:empty">
        <Setter Property="Empty.Margin" Value="10" />
        <Setter Property="Template">
            <ControlTemplate>
                <ContentControl x:Name="EmptyContent"
                                Margin="{TemplateBinding Empty.Margin}"
                                Theme="{TemplateBinding Empty.ContentTheme}"
                                ContentTemplate="{TemplateBinding Empty.ContentTemplate}"
                                Content="{TemplateBinding Empty.Content}"
                                IsHitTestVisible="False" />
            </ControlTemplate>
        </Setter>
    </Style>

    <Design.PreviewWith>
        <Card Header="This is a CardGrid">
            <CardGrid Width="400" Empty.Content="This shows because the content is empty" />
        </Card>
    </Design.PreviewWith>

</Styles>
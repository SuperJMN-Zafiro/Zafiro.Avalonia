<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Zafiro.Avalonia.Controls"
        xmlns:converters="clr-namespace:Zafiro.Avalonia.Converters">

    <Design.PreviewWith>
        <StackPanel>
            <conv:EdgePanel StartContent="Start"
                            Content="Main"
                            EndContent="End" />
            <conv:EdgePanel Content="Main"
                            EndContent="End" />
            <conv:EdgePanel Content="Main"
                            StartContent="Start" />
        </StackPanel>
    </Design.PreviewWith>

    <Styles.Resources>
        <ControlTheme TargetType="{x:Type conv:EdgePanel}" x:Key="{x:Type conv:EdgePanel}">
            <Setter Property="Spacing" Value="10" />
            <Setter Property="Template">

                <ControlTemplate>
                    <DockPanel
                        Background="{TemplateBinding Background}">
                        <ContentPresenter x:Name="StartContent" DockPanel.Dock="Left"
                                          ContentTemplate="{TemplateBinding StartContentTemplate}"
                                          Margin="{TemplateBinding Spacing, Converter={x:Static converters:SpacingConverters.SpacingToRightMargin}}"
                                          Content="{TemplateBinding StartContent}" IsVisible="{Binding $parent[conv:EdgePanel].StartContent, Converter={x:Static ObjectConverters.IsNotNull}}" />
                        <ContentPresenter x:Name="EndContent" DockPanel.Dock="Right"
                                          ContentTemplate="{TemplateBinding EndContentTemplate}"
                                          Margin="{TemplateBinding Spacing, Converter={x:Static converters:SpacingConverters.SpacingToLeftMargin}}"
                                          IsVisible="{Binding $parent[conv:EdgePanel].EndContent, Converter={x:Static ObjectConverters.IsNotNull}}"
                                          Content="{TemplateBinding EndContent}" />
                        <ContentPresenter x:Name="MainContent" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" />
                    </DockPanel>
                </ControlTemplate>
            </Setter>
        </ControlTheme>
    </Styles.Resources>

</Styles>
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Styles.Resources>
        <ControlTheme x:Key="{x:Type OverlayBorder}" TargetType="OverlayBorder">
            <Setter Property="ClipToBounds" Value="False"></Setter>
            <Setter Property="Template">
                <ControlTemplate>
                    <Panel ClipToBounds="False">
                        <!-- Shadow layer (no clipping) -->
                        <Border Background="{TemplateBinding Background}"
                                IsHitTestVisible="False"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding Background}"
                                BoxShadow="{TemplateBinding BoxShadow}" />

                        <!-- Content layer with clipping -->
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                ClipToBounds="True">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>

                        <!-- Overlay border -->
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                IsHitTestVisible="False"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                Background="Transparent" />
                    </Panel>
                </ControlTemplate>
            </Setter>
        </ControlTheme>

        <ControlTheme x:Key="CardOverlayBorder" TargetType="OverlayBorder" BasedOn="{StaticResource {x:Type OverlayBorder}}">
            <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundAltHighBrush}" />
            <Setter Property="BoxShadow" Value="0 2 8 0 #19000000" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="15" />
            <Style Selector="^:pointerover">
                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlHighlightBaseMediumLowBrush}" />
                <Setter Property="BoxShadow" Value="0 4 12 0 #26000000" />
            </Style>
            <Style Selector="^:pressed /template/ HeaderedContainer#Root">
                <Setter Property="BoxShadow" Value="0 1 4 0 #0D000000" />
            </Style>
        </ControlTheme>

    </Styles.Resources>
    <Design.PreviewWith>

        <StackPanel Margin="20" Spacing="10">

            <!-- Original problematic case -->
            <OverlayBorder Background="Orange"
                           BorderBrush="Red"
                           BorderThickness="1"
                           CornerRadius="12"
                           Width="100"
                           Height="50">
                <TextBlock Text="HOLA"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </OverlayBorder>

            <!-- With BoxShadow -->
            <OverlayBorder Background="LightBlue"
                           BorderBrush="DarkBlue"
                           BorderThickness="1"
                           CornerRadius="8"
                           BoxShadow="10 10 30 5 #80000000"
                           Width="150"
                           Height="60">
                <TextBlock Text="WITH SHADOW"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </OverlayBorder>

            <!-- Multiple shadows -->
            <OverlayBorder Background="LightGreen"
                           BorderBrush="Green"
                           BorderThickness="1"
                           CornerRadius="15"
                           ClipToBounds="False"
                           BoxShadow="5 5 10 0 DarkGray"
                           Width="120"
                           Height="50">
                <TextBlock Text="MULTI"
                           FontSize="18"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </OverlayBorder>

            <OverlayBorder Theme="{StaticResource CardOverlayBorder}">
                THIS IS CARD-LIKE BORDER
            </OverlayBorder>

        </StackPanel>

    </Design.PreviewWith>
</Styles>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:navigation="clr-namespace:Zafiro.Avalonia.Controls.Navigation"
             xmlns:navigation1="clr-namespace:Zafiro.UI.Navigation;assembly=Zafiro.UI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Zafiro.Avalonia.Controls.Navigation.NavigationHostView"
             x:CompileBindings="True"
             x:DataType="navigation1:INavigationHost">
    <Panel>
        <navigation:Frame Navigator="{Binding Navigator}" IsVisible="{Binding !IsLoading^}" />
        <ProgressBar VerticalAlignment="Center" HorizontalAlignment="Center"
                     IsVisible="{Binding IsLoading^}" />
    </Panel>
</UserControl>
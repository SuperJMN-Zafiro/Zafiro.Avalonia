<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:Zafiro.Avalonia.Controls.Diagrams" 
        xmlns:controls="clr-namespace:Zafiro.Avalonia.Controls">
    <Design.PreviewWith>
        <c:LabelsControl />
    </Design.PreviewWith>

    <Styles.Resources>
        <ControlTheme x:Key="{x:Type c:LabelsControl}" TargetType="c:LabelsControl">
            <Setter Property="Template">
                <ControlTemplate>
                    <ItemsControl ItemsSource="{Binding $parent[c:LabelsControl].Controller.Labels}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <controls:MidpointCanvas />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ControlTemplate>
            </Setter>
        </ControlTheme>
    </Styles.Resources>

</Styles>

<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <SlimWizardControl Width="500">
            <SlimWizardControl.Wizard>
                <WizardDesign />
            </SlimWizardControl.Wizard>
        </SlimWizardControl>
    </Design.PreviewWith>

    <Style Selector="SlimWizardControl">
        <Setter Property="Template">
            <ControlTemplate>
                <DockPanel>
                    <WizardHeader Width="{TemplateBinding Wizard}" DockPanel.Dock="Top" />
                    <ScrollViewer>
                        <ContentControl Padding="{TemplateBinding Padding}" Content="{Binding $parent[SlimWizardControl].Wizard.CurrentPage.Content}" />
                        <Interaction.Behaviors>
                            <NestedScrollViewerBehavior />
                        </Interaction.Behaviors>
                    </ScrollViewer>
                </DockPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
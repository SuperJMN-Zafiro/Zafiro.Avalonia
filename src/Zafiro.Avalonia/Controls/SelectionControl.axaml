<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Zafiro.Avalonia.Controls"
                    xmlns:converters="clr-namespace:Zafiro.Avalonia.Converters">
    <ControlTheme TargetType="controls:SelectionControl" x:Key="{x:Type controls:SelectionControl}">
        <Setter Property="Template">
            <ControlTemplate>
                <CheckBox Command="{TemplateBinding CycleSelection}"
                          IsChecked="{TemplateBinding SelectionKind, Converter={x:Static converters:MiscConverters.SelectionKindToCheckBoxValue}}" />
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>

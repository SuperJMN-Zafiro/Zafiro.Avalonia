<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:generic="clr-namespace:System.Collections.Generic;assembly=System.Collections"
        xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI"
        xmlns:se="clr-namespace:Zafiro.UI.Navigation.Sections;assembly=Zafiro.UI">

    <Styles.Resources>

        <TransformOperations x:Key="VerticalSmallScrollThumbScaleTransform">scaleX(0.125)</TransformOperations>

        <ControlTheme TargetType="Sidebar" x:Key="{x:Type Sidebar}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="IconWidth" Value="40" />
            <Setter Property="IconHeight" Value="40" />
            <Setter Property="IconMargin" Value="4" />
            <Setter Property="SectionNameMargin" Value="0 0 10 0" />
            <Setter Property="SectionSpacing" Value="0" />
            <Setter Property="Template">
                <ControlTemplate>
                    <ListBox VerticalAlignment="Stretch" Background="{TemplateBinding Background}"
                             ItemsSource="{Binding $parent[Sidebar].Sections}"
                             SelectedItem="{Binding $parent[Sidebar].SelectedSection}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <DockPanel LastChildFill="False" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.DataTemplates>
                            <DataTemplate DataType="se:IContentSection">
                                <DockPanel HorizontalSpacing="{Binding $parent[Sidebar].SectionSpacing}"
                                           Background="Transparent"
                                           ToolTip.Tip="{Binding Name}">
                                    <ContentControl DockPanel.Dock="Left" Width="{Binding $parent[Sidebar].IconWidth}"
                                                    Height="{Binding $parent[Sidebar].IconHeight}"
                                                    Padding="{Binding $parent[Sidebar].IconMargin}"
                                                    Content="{Binding Icon}"
                                                    ContentTemplate="{Binding $parent[Sidebar].IconTemplate}" />
                                    <TextBlock TextTrimming="CharacterEllipsis"
                                               Margin="{Binding $parent[Sidebar].SectionNameMargin}"
                                               Text="{Binding Name}" VerticalAlignment="Center" />
                                </DockPanel>
                            </DataTemplate>
                            <DataTemplate DataType="se:ICommandSection">
                                <Button Padding="0"
                                        HorizontalContentAlignment="Left"
                                        Theme="{StaticResource TransparentButton}"
                                        Command="{Binding Command}"
                                        Background="Transparent"
                                        HorizontalAlignment="Stretch">
                                    <Button.Content>
                                        <DockPanel Background="Transparent" ToolTip.Tip="{Binding Name}"
                                                   HorizontalSpacing="{Binding $parent[Sidebar].SectionSpacing}">
                                            <ContentControl DockPanel.Dock="Left" Width="{Binding $parent[Sidebar].IconWidth}"
                                                            Height="{Binding $parent[Sidebar].IconHeight}"
                                                            Padding="{Binding $parent[Sidebar].IconMargin}"
                                                            Content="{Binding Icon}" />
                                            <TextBlock TextTrimming="CharacterEllipsis"
                                                       Margin="{Binding $parent[Sidebar].SectionNameMargin}"
                                                       Text="{Binding Name}" VerticalAlignment="Center" />
                                        </DockPanel>
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                            <DataTemplate DataType="se:ISectionSeparator">
                                <Separator />
                            </DataTemplate>
                        </ListBox.DataTemplates>

                        <ListBox.ItemContainerTheme>
                            <ControlTheme x:DataType="se:IContentSection" TargetType="ListBoxItem"
                                          BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="DockPanel.Dock"
                                        x:DataType="se:IContentSection"
                                        Value="{Binding IsPrimary, Converter={x:Static ShellConverters.IsPrimaryToDock}}" />
                                <Setter Property="IsHitTestVisible"
                                        Value="{Binding Converter={x:Static ShellConverters.IsActivatable}}" />
                            </ControlTheme>
                        </ListBox.ItemContainerTheme>
                    </ListBox>

                </ControlTemplate>
            </Setter>

        </ControlTheme>

    </Styles.Resources>

    <Style Selector="Sidebar ScrollViewer">
        <Setter Property="Theme" Value="{StaticResource CuedScrollViewer}" />
    </Style>

    <Style Selector="Sidebar ScrollViewer RepeatButton">
        <Setter Property="Theme" Value="{StaticResource FullTransparentButton}" />
    </Style>

    <Design.PreviewWith>
        <StackPanel>
            <Sidebar Height="400" IconWidth="30">
                <Sidebar.Sections>
                    <generic:List x:TypeArguments="se:ISection">
                        <ContentSectionDesign Name="Section 1 with long name" IsPrimary="True">
                            <ContentSectionDesign.Icon>
                                <ui:Icon Source="fa-wallet" />
                            </ContentSectionDesign.Icon>
                        </ContentSectionDesign>
                        <ContentSectionDesign Name="Hola4">
                            <ContentSectionDesign.Icon>
                                <ui:Icon Source="fa-wallet" />
                            </ContentSectionDesign.Icon>
                        </ContentSectionDesign>
                        <ContentSectionDesign Name="Hola3">
                            <ContentSectionDesign.Icon>
                                <ui:Icon Source="fa-wallet" />
                            </ContentSectionDesign.Icon>
                        </ContentSectionDesign>
                        <ContentSectionDesign Name="Hola3">
                            <ContentSectionDesign.Icon>
                                <ui:Icon Source="fa-wallet" />
                            </ContentSectionDesign.Icon>
                        </ContentSectionDesign>
                        <ContentSectionDesign Name="Hola3">
                            <ContentSectionDesign.Icon>
                                <ui:Icon Source="fa-wallet" />
                            </ContentSectionDesign.Icon>
                        </ContentSectionDesign>
                        <ContentSectionDesign Name="Hola3">
                            <ContentSectionDesign.Icon>
                                <ui:Icon Source="fa-wallet" />
                            </ContentSectionDesign.Icon>
                        </ContentSectionDesign>
                        <ContentSectionDesign Name="Hola3">
                            <ContentSectionDesign.Icon>

<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:a="clr-namespace:Zafiro.Avalonia.Controls.SlimDataGrid"
        xmlns:g="clr-namespace:System.Collections.Generic;assembly=System.Collections">


    <Styles.Resources>

        <SolidColorBrush x:Key="SlimDataGridSeparatorBrush" Color="{DynamicResource SystemChromeMediumLowColor}" />
        <Thickness x:Key="SlimDataGridBorderThickness">0 1 0 0</Thickness>

        <ControlTheme x:Key="{x:Type a:Row}" TargetType="a:Row">
            <Setter Property="DataContext" Value="{Binding $self.Data}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SlimDataGridSeparatorBrush}" />
            <Setter Property="Padding" Value="0 5" />
            <Setter Property="BorderThickness" Value="{DynamicResource SlimDataGridBorderThickness}" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Padding="{TemplateBinding Padding}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            ClipToBounds="{TemplateBinding ClipToBounds}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsControl ItemsSource="{TemplateBinding Properties}">
                            <ItemsControl.ItemContainerTheme>
                                <ControlTheme TargetType="a:Cell" BasedOn="{StaticResource {x:Type a:Cell}}">
                                    <Setter Property="Grid.Column" Value="{Binding $self.Index}" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </ControlTheme>
                            </ItemsControl.ItemContainerTheme>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Grid>
                                        <Interaction.Behaviors>
                                            <a:BindableColumnDefinitionsBehavior ColumnDefinitions="{Binding $parent[a:SlimDataGrid].Columns, Mode=OneWay, Converter={x:Static a:Converters.ColumnDefsConverter}}" />
                                        </Interaction.Behaviors>
                                    </Grid>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Border>
                </ControlTemplate>
            </Setter>

        </ControlTheme>

        <ControlTheme x:Key="{x:Type a:Cell}" TargetType="a:Cell">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemChromeLowColor}" />
            <Setter Property="BorderThickness" Value="{DynamicResource TextControlBorderThemeThickness}" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        ClipToBounds="{TemplateBinding ClipToBounds}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentControl ContentTemplate="{TemplateBinding ItemTemplate}"
                                        Content="{TemplateBinding  Value}" />
                    </Border>
                </ControlTemplate>
            </Setter>
        </ControlTheme>

        <ControlTheme x:Key="{x:Type a:Header}" TargetType="a:Header">
            <Setter Property="BorderBrush" Value="{DynamicResource SystemChromeLowColor}" />
            <Setter Property="BorderThickness" Value="{DynamicResource TextControlBorderThemeThickness}" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentControl ContentTemplate="{TemplateBinding ItemTemplate}"
                                        Content="{TemplateBinding Value}" />
                    </Border>
                </ControlTemplate>
            </Setter>
        </ControlTheme>

        <ControlTheme x:Key="{x:Type a:SlimDataGrid}" TargetType="a:SlimDataGrid">
            <Setter Property="Background" Value="{DynamicResource SystemRegionColor}" />
            <Setter Property="BorderBrush" Value="{DynamicResource SystemChromeMediumColor}" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="15 10" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Panel>
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <DockPanel Grid.IsSharedSizeScope="True" VerticalSpacing="10">
                                <Border DockPanel.Dock="Top" x:Name="Header"
                                        BorderThickness="{TemplateBinding HeaderBorderThickness}"
                                        BorderBrush="{TemplateBinding HeaderBorderBrush}"
                                        Padding="{TemplateBinding HeaderPadding}"
                                        Background="{TemplateBinding HeaderBackground}">
                                    <ItemsControl TextElement.FontWeight="Bold" ItemsSource="{TemplateBinding Headers}">
                                        <ItemsControl.ItemContainerTheme>
                                            <ControlTheme TargetType="a:Header" x:DataType="a:Header" BasedOn="{StaticResource {x:Type a:Header}}">
                                                <Setter Property="Grid.Column" Value="{Binding $self.Index}" />
                                            </ControlTheme>
                                        </ItemsControl.ItemContainerTheme>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Grid>
                                                    <Interaction.Behaviors>
                                                        <a:BindableColumnDefinitionsBehavior ColumnDefinitions="{Binding $parent[a:SlimDataGrid].Columns, Mode=OneWay, Converter={x:Static a:Converters.ColumnDefsConverter}}" />
                                                    </Interaction.Behaviors>
                                                </Grid>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </Border>
                                <ScrollViewer>
                                    <ItemsControl ItemsSource="{TemplateBinding DataRows}" />
                                </ScrollViewer>
                            </DockPanel>
                        </Border>
                        <Border CornerRadius="{TemplateBinding CornerRadius}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}" />
                    </Panel>
                </ControlTemplate>
            </Setter>
        </ControlTheme>
    </Styles.Resources>

    <Design.PreviewWith>
        <SlimDataGrid Width="500">
            <SlimDataGrid.Columns>
                <Column Binding="{Binding Left}" Header="Column 1" />
                <Column Binding="{Binding Left}" Header="Column 2" />
                <Column Binding="{Binding Left}" Header="Column 3" />
                <Column Header="Column 4">
                    <Column.CellTemplate>
                        <DataTemplate>
                            <Button Height="30" Content="HOLA" />
                        </DataTemplate>
                    </Column.CellTemplate>
                </Column>
            </SlimDataGrid.Columns>
            <SlimDataGrid.ItemsSource>
                <g:List x:TypeArguments="MyViewModel">
                    <MyViewModel Left="Left" Title="Title" Right="Right" />
                    <MyViewModel Left="Left" Title="Title" Right="Right" />
                    <MyViewModel Left="Left" Title="Title" Right="Right" />
                </g:List>
            </SlimDataGrid.ItemsSource>
        </SlimDataGrid>
    </Design.PreviewWith>
</Styles>
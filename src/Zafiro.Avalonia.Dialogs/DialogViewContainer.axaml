<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Zafiro.UI.Avalonia" x:CompileBindings="True">
    <Design.PreviewWith>
        <controls:DialogViewContainer />
    </Design.PreviewWith>

    <Style Selector="controls|DialogViewContainer">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border Background="Black" Opacity="0.4" />
                    <Border Padding="12" CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center"
                            Background="White">
                        <DockPanel>
                            <TextBlock FontWeight="Bold" Text="{TemplateBinding Title}" DockPanel.Dock="Top" />
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </DockPanel>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
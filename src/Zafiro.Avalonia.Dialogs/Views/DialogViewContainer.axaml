<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dialogs="clr-namespace:Zafiro.Avalonia.Dialogs"
        xmlns:generic="clr-namespace:System.Collections.Generic;assembly=System.Collections">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="20">
                <Border BorderBrush="Black" BorderThickness="1">
                    <dialogs:DialogViewContainer Title="Title" Classes="Desktop" Width="400" Height="400">
                        <dialogs:DialogView Content="Text message">
                            <dialogs:DialogView.Options>
                                <generic:List x:TypeArguments="dialogs:IOption">
                                    <dialogs:OptionDesign Title="OK" />
                                    <dialogs:OptionDesign Title="Cancel" />
                                </generic:List>
                            </dialogs:DialogView.Options>
                        </dialogs:DialogView>
                    </dialogs:DialogViewContainer>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1">
                    <dialogs:DialogViewContainer Title="Title"
                                                 Classes="Mobile" Width="400" Height="400">
                        <dialogs:DialogView Content="Text message">
                            <dialogs:DialogView.Options>
                                <generic:List x:TypeArguments="dialogs:IOption">
                                    <dialogs:OptionDesign Title="OK" />
                                    <dialogs:OptionDesign Title="Cancel" />
                                </generic:List>
                            </dialogs:DialogView.Options>
                        </dialogs:DialogView>
                    </dialogs:DialogViewContainer>
                </Border>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="dialogs|DialogViewContainer.Mobile">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border Background="Black" Opacity="0.4" />
                    <Border Padding="12" CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center"
                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                        <DockPanel>
                            <Panel DockPanel.Dock="Top">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" Text="{TemplateBinding Title}" />
                                <Button Theme="{StaticResource TransparentButton}" HorizontalAlignment="Right" Content="x" Command="{TemplateBinding Close}"></Button>
                            </Panel>
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </DockPanel>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="dialogs|DialogViewContainer.Desktop">
        <Setter Property="Template">
            <ControlTemplate>
                <ContentPresenter Padding="12" Content="{TemplateBinding Content}" />
            </ControlTemplate>
        </Setter>
    </Style>

</Styles>
        </StackPanel>
    </Design.PreviewWith>

    <Style Selector="DialogViewContainer">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border Background="Black" Opacity="0.4" />
                    <Border Classes="Card" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <DockPanel>
                            <Panel DockPanel.Dock="Top">
                                <TextBlock VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Center" Text="{TemplateBinding Title}" />
                                <Button Theme="{StaticResource TransparentButton}" IconOptions.Size="24" Content="{Icon mdi-close}"
                                            HorizontalAlignment="Right" Command="{TemplateBinding Close}">
                                    
                                </Button>
                            </Panel>
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </DockPanel>
                    </Border>
                </Panel>
            </ControlTemplate>
        </Setter>

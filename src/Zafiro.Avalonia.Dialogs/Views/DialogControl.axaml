<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:g="clr-namespace:System.Collections.Generic;assembly=System.Collections"
        xmlns:dialogs="clr-namespace:Zafiro.Avalonia.Dialogs">

    <Styles.Resources>

        <ControlTheme TargetType="DialogControl" x:Key="{x:Type DialogControl}">
            <Setter Property="Template">
                <ControlTemplate>
                    <OptimalDisplayDecorator MinProportion="0.2" MaxProportion="0.5">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Padding>
                                <MultiBinding Converter="{x:Static dialogs:ResponsivePaddingConverter.Instance}" ConverterParameter="0.04,6,20">
                                    <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Bounds.Width" />
                                    <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Bounds.Height" />
                                </MultiBinding>
                            </Border.Padding>
                            <Border.DataTemplates>
                                <DataTemplate DataType="dialogs:IOption">
                                    <EnhancedButton Content="{Binding Title}"
                                                    Command="{Binding Command}"
                                                    IsVisible="{Binding IsVisible^}"
                                                    IsCancel="{Binding IsCancel}"
                                                    IsDefault="{Binding IsDefault}"
                                                    Padding="16 8"
                                                    CornerRadius="4"
                                                    Tag="{Binding Role}">
                                        <EnhancedButton.Styles>
                                            <Style Selector="EnhancedButton[Tag=Destructive]">
                                                <Setter Property="Tint" Value="{DynamicResource SystemErrorTextColor}" />
                                            </Style>
                                            <Style Selector="EnhancedButton[Tag=Cancel]">
                                                <Setter Property="BorderThickness" Value="1" />
                                                <Setter Property="Tint" Value="Transparent" />
                                            </Style>
                                            <Style Selector="EnhancedButton[Tag=Secondary]">
                                                <Setter Property="Tint" Value="{DynamicResource ChromeDisabledHigh}" />
                                            </Style>
                                        </EnhancedButton.Styles>
                                    </EnhancedButton>
                                </DataTemplate>
                            </Border.DataTemplates>

                            <Border.Styles>
                                <Style Selector="ItemsControl:empty">
                                    <Setter Property="IsVisible" Value="False" />
                                </Style>
                                <Style Selector="ItemsControl.Horizontal">
                                    <Setter Property="ItemsPanel">
                                        <Setter.Value>
                                            <ItemsPanelTemplate>
                                                <StackPanel Classes="ButtonGroup" />
                                            </ItemsPanelTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                                <Style Selector="StackPanel.ButtonGroup">
                                    <Setter Property="Spacing" Value="10" />
                                    <Setter Property="Orientation" Value="Horizontal" />
                                </Style>
                            </Border.Styles>

                            <Grid RowDefinitions="Auto,*,Auto">
                                <!-- Title -->
                                <TextBlock Grid.Row="0"
                                           FontWeight="Bold"
                                           Margin="0 0 0 10"
                                           Text="{Binding $parent[DialogControl].Title}" IsVisible="{Binding $self.Text, Converter={x:Static ObjectConverters.IsNotNull}}" />

                                <!-- Content -->
                                <ScrollViewer Grid.Row="1" x:Name="DialogScrollViewer">
                                    <Interaction.Behaviors>
                                        <NestedScrollViewerBehavior />
                                    </Interaction.Behaviors>
                                    <ContentPresenter
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        Content="{TemplateBinding Content}" />
                                </ScrollViewer>

                                <!-- Buttons -->
                                <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto" Margin="0 16 0 0">

                                    <!-- Cancel y Secondary a la izquierda -->
                                    <StackPanel Grid.Column="0"
                                                Classes="ButtonGroup"
                                                Orientation="Horizontal"
                                                Spacing="8">
                                        <!-- Cancel siempre va primero -->
                                        <ItemsControl Classes="Horizontal" ItemsSource="{Binding $parent[DialogControl].CancelOptions}" />
                                        <!-- Secondary despuÃ©s de Cancel -->
                                        <ItemsControl Classes="Horizontal" ItemsSource="{Binding $parent[DialogControl].SecondaryOptions}" />
                                    </StackPanel>

                                    <!-- Info en el centro -->
                                    <ItemsControl Classes="Horizontal"
                                                  Grid.Column="1"
                                                  HorizontalAlignment="Center"
                                                  ItemsSource="{Binding $parent[DialogControl].InfoOptions}" />

                                    <!-- Primary/Destructive a la derecha -->
                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                Classes="ButtonGroup"
                                                Spacing="8">
                                        <!-- Primary primero -->
                                        <ItemsControl Classes="Horizontal" ItemsSource="{Binding $parent[DialogControl].PrimaryOptions}" />
                                        <!-- Destructive al final -->
                                        <ItemsControl Classes="Horizontal" ItemsSource="{Binding $parent[DialogControl].DestructiveOptions}" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </OptimalDisplayDecorator>
                </ControlTemplate>
            </Setter>
        </ControlTheme>

    </Styles.Resources>

    <Design.PreviewWith>

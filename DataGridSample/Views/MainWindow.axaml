<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DataGridSample.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DataGridSample.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
        xmlns:global="clr-namespace:;assembly=Zafiro.Avalonia"
        Title="DataGridSample">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<DockPanel>
        <Button Command="{Binding ScrollToRandom}" DockPanel.Dock="Top">Scroll to random item</Button>
        <TreeDataGrid Source="{Binding Source}">

			<i:Interaction.Behaviors>
				<global:ScrollToSelectedItemBehavior x:TypeArguments="vm:Model">
					<x:Arguments>
						<x:String>Children</x:String>
					</x:Arguments>
				</global:ScrollToSelectedItemBehavior>
			</i:Interaction.Behaviors>
		</TreeDataGrid>
	</DockPanel>

</Window>

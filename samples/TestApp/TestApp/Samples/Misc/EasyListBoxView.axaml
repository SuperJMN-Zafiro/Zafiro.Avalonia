<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:misc="clr-namespace:TestApp.Samples.Misc"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TestApp.Samples.Misc.EasyListBoxView"
             x:DataType="misc:EasyListBoxViewModel">

    <UserControl.Styles>
        <StyleInclude Source="/Samples/SampleStyles.axaml" />
    </UserControl.Styles>

    <StackPanel>
        <Card Header="ListBox" Subheader="Extend your lists with superpowers!">
            <DockPanel>
                <CheckBox DockPanel.Dock="Top" x:Name="CheckBox" Content="Show item checkboxes" />
                <ListBox x:Name="ListBox"
                         ItemsSource="{Binding Items}"
                         Selection="{Binding SelectionModel}"
                         Selection.EnableCheckBoxes="{Binding #CheckBox.IsChecked}" Theme="{StaticResource EasyListBox}"
                         SelectionMode="Multiple">
                </ListBox>
            </DockPanel>
        </Card>
        <Card Header="Empty list" Subheader="Special content appears when the ItemsControl is empty">
            <ListBox Classes="ShowEmptyContent" Empty.Content="Salute" />
        </Card>
    </StackPanel>
</UserControl>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialogs="clr-namespace:TestApp.Samples.Dialogs"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TestApp.Samples.Dialogs.DialogSampleView"
             x:DataType="dialogs:DialogSampleViewModel">

    <UserControl.Styles>
        <StyleInclude Source="/Samples/SampleStyles.axaml" />
    </UserControl.Styles>

    <StackPanel Spacing="10" VerticalAlignment="Center">
        <EnhancedButton Content="Show simple message" HorizontalAlignment="Center" Command="{Binding ShowMessage}" />
        <EnhancedButton Content="Show big dialog" HorizontalAlignment="Center" Command="{Binding BigDialog}" />
        <EnhancedButton Content="Open a user-interacting dialog" HorizontalAlignment="Center" Command="{Binding ShowDialog}" />
        <EnhancedButton Content="Dialog executing result" HorizontalAlignment="Center" Command="{Binding  WithSubmitResult}" />
    </StackPanel>
</UserControl>
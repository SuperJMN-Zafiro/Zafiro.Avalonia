<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialogs="clr-namespace:TestApp.Samples.Dialogs"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TestApp.Samples.Dialogs.DialogSampleView"
             x:DataType="dialogs:DialogSampleViewModel">
	<StackPanel Spacing="10" VerticalAlignment="Center">
        <Button Content="Show simple message" HorizontalAlignment="Center" Command="{Binding ShowMessage}" />
        <Button Content="Open a user-interacting dialog" HorizontalAlignment="Center" Command="{Binding ShowDialog}" />
	</StackPanel>
</UserControl>

<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:b="https://github.com/avaloniaui"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="TestApp.Samples.Behaviors.ChildrenVisibilityTrackerView">

  <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">
    <!-- Status bar -->
    <Border Padding="12" Background="{DynamicResource ThemeBackgroundBrush}">
      <StackPanel Orientation="Horizontal" Spacing="16">
        <TextBlock FontWeight="Bold" Text="ChildrenVisibilityTrackerBehavior"/>
        <TextBlock Text="Visible:"/>
        <TextBlock Text="{Binding #Tracker.VisibleChildren.Count}" Foreground="Green" FontWeight="Bold"/>
        <TextBlock Text="Invisible:" Margin="16,0,0,0"/>
        <TextBlock Text="{Binding #Tracker.InvisibleChildren.Count}" Foreground="Red" FontWeight="Bold"/>
        <ToggleSwitch Content="Count partial as visible"
                      IsChecked="{Binding #Tracker.CountPartialAsVisible, Mode=TwoWay}"/>
      </StackPanel>
    </Border>

    <!-- Fixed height container with clipping to simulate viewport -->
    <Border Grid.Row="1" Height="300" ClipToBounds="True" BorderBrush="Gray" BorderThickness="2" Margin="12">
      <StackPanel Spacing="8" Margin="8" x:Name="TestPanel">
        <b:Interaction.Behaviors>
          <b:ChildrenVisibilityTrackerBehavior x:Name="Tracker" CountPartialAsVisible="True"/>
        </b:Interaction.Behaviors>

        <!-- Direct children (no ItemsControl) -->
        <Border Height="50" Background="#e3f2fd" CornerRadius="6" Padding="8">
          <TextBlock Text="Item 1 (Height=50)" VerticalAlignment="Center"/>
        </Border>
        <Border Height="60" Background="#fce4ec" CornerRadius="6" Padding="8">
          <TextBlock Text="Item 2 (Height=60)" VerticalAlignment="Center"/>
        </Border>
        <Border Height="40" Background="#e8f5e9" CornerRadius="6" Padding="8">
          <TextBlock Text="Item 3 (Height=40)" VerticalAlignment="Center"/>
        </Border>
        <Border Height="70" Background="#fff3e0" CornerRadius="6" Padding="8">
          <TextBlock Text="Item 4 (Height=70)" VerticalAlignment="Center"/>
        </Border>
        <Border Height="80" Background="#ede7f6" CornerRadius="6" Padding="8">
          <TextBlock Text="Item 5 (Height=80)" VerticalAlignment="Center"/>
        </Border>
        <Border Height="90" Background="#e1f5fe" CornerRadius="6" Padding="8">
          <TextBlock Text="Item 6 (Height=90)" VerticalAlignment="Center"/>
        </Border>
        <Border Height="50" Background="#f3e5f5" CornerRadius="6" Padding="8">
          <TextBlock Text="Item 7 (Height=50)" VerticalAlignment="Center"/>
        </Border>
      </StackPanel>
    </Border>

    <!-- Controls to test behavior -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="12" Margin="12">
      <Button Content="Hide Item 3" Click="HideItem3_Click"/>
      <Button Content="Show Item 3" Click="ShowItem3_Click"/>
      <TextBlock Text="Expected: About 3-4 visible items (depending on spacing)" VerticalAlignment="Center" Foreground="Gray"/>
    </StackPanel>
  </Grid>
</UserControl>

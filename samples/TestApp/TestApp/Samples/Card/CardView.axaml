<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI"
             xmlns:avalonia="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
             x:Class="TestApp.Samples.Card.CardView">

    <UserControl.DataTemplates>
        <DataTemplate DataType="ui:Icon">
            <avalonia:Icon Value="{Binding Source}" FontSize="40" />
        </DataTemplate>
    </UserControl.DataTemplates>

    <Grid ColumnDefinitions="* 2* *" Grid.RowDefinitions="* *">
        <Card Grid.Column="1" VerticalAlignment="Center" Margin="10" HeaderStartContent="{Icon fa-wallet}"
              Header="It helps you group related information in a convenient way" Subheader="A Card is a container that can hold various types of content">
            <StackPanel Spacing="10">
                <BulletList Header="It offers you special places to put your contents:">
                    <x:String>Header</x:String>
                    <x:String>Subheader</x:String>
                    <x:String>Header Start Content</x:String>
                    <x:String>Header End Content</x:String>
                    <x:String>Content</x:String>
                </BulletList>
                <Button Content="This is a button" />
            </StackPanel>
        </Card>
        <Card Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Theme="{StaticResource LeftFlexHeaderCard}" Margin="10" HeaderStartContent="{Icon fa-wallet}"
              Header="Left header" Subheader="Title with left header adfasdfasdfasfasasfddasfdaasdfffffff">
            <StackPanel Spacing="10">
                <BulletList Header="It offers you special places to put your contents:">
                    <x:String>Header</x:String>
                    <x:String>Subheader</x:String>
                    <x:String>Header Start Content</x:String>
                    <x:String>Header End Content</x:String>
                    <x:String>Content</x:String>
                </BulletList>
                <Button Content="This is a button" />
            </StackPanel>
        </Card>
    </Grid>
</UserControl>
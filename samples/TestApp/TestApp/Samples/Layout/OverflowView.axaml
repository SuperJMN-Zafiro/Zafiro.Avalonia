<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="350"
             x:Class="TestApp.Samples.Layout.OverflowView">
    <ItemsControl>

        <Interaction.Behaviors>
            <OverflowBehavior />
        </Interaction.Behaviors>

        <Button HorizontalAlignment="Stretch">CÓMO ESTÁS</Button>
        <Button DockPanel.Dock="Right" HorizontalAlignment="Stretch">CÓMO ESTÁS</Button>
        <TextBlock TextWrapping="Wrap">HOLA TÍO QUÉ TAL</TextBlock>

        <ItemsControl.Styles>
            <Style Selector="ItemsControl">
                <Setter Property="ItemsPanel">
                    <ItemsPanelTemplate>
                        <DockPanel />
                    </ItemsPanelTemplate>
                </Setter>
            </Style>
            <Style Selector="ItemsControl:overflow">
                <Setter Property="ItemsPanel">
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </Setter>
            </Style>
        </ItemsControl.Styles>
    </ItemsControl>
</UserControl>
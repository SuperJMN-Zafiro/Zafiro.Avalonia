<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:Class="TestApp.Samples.Layout.OverflowView">
    <StackPanel>
        <TextBlock>HOLA</TextBlock>
        <TextBlock>CÓMO ESTÁS</TextBlock>
        <TextBlock>TÍO</TextBlock>
        <TextBlock>DALE CAÑA</TextBlock>

        <Interaction.Behaviors>
            <ResponsiveReactiveBehavior />
        </Interaction.Behaviors>

        <StackPanel.Styles>
            <Style Selector="StackPanel">
                <Setter Property="Orientation" Value="Horizontal" />
            </Style>
            <Style Selector="StackPanel:overflow">
                <Setter Property="Orientation" Value="Vertical" />
            </Style>
        </StackPanel.Styles>
    </StackPanel>
</UserControl>
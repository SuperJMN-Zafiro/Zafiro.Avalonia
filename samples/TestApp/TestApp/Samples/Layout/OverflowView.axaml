<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="450"
             x:Class="TestApp.Samples.Layout.OverflowView">
    <ItemsControl>

        <Interaction.Behaviors>
            <OverflowBehavior IsEnabled="True" />
        </Interaction.Behaviors>

        <EnhancedButton HorizontalAlignment="Stretch">CÓMO ESTÁS</EnhancedButton>
        <EnhancedButton DockPanel.Dock="Right" HorizontalAlignment="Stretch">CÓMO ESTÁS</EnhancedButton>

        <TextBlock MinWidth="100" TextWrapping="Wrap">blab blabla y todo eso y la bla bla blabla wrap</TextBlock>

        <ItemsControl.Styles>
            <Style Selector="ItemsControl">
                <Setter Property="ItemsPanel">
                    <ItemsPanelTemplate>
                        <DockPanel />
                    </ItemsPanelTemplate>
                </Setter>
            </Style>
            <Style Selector="ItemsControl:overflow">
                <Setter Property="ItemsPanel">
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </Setter>
            </Style>
        </ItemsControl.Styles>
    </ItemsControl>
</UserControl>
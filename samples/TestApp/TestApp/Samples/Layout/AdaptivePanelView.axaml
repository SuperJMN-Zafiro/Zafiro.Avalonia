<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="TestApp.Samples.Layout.AdaptivePanelView">

    <Card Subheader="Switches its content when the original content doesn't fit the available space">
        <Grid ColumnDefinitions="* 3* *" ShowGridLines="True">
            <AdaptivePanel Grid.Column="1">
                <AdaptivePanel.OverflowContent>
                    <StackPanel Orientation="Vertical">
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                    </StackPanel>
                </AdaptivePanel.OverflowContent>
                <AdaptivePanel.Content>
                    <StackPanel Orientation="Horizontal">
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                        <Button>HOLA</Button>
                    </StackPanel>
                </AdaptivePanel.Content>
            </AdaptivePanel>
        </Grid>

    </Card>

</UserControl>
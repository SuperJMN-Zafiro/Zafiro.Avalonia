<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:TestApp.Samples.Wizard.Pages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TestApp.Samples.Wizard.Pages.SecondPageView"
             x:DataType="pages:SecondPageViewModel">
    <TextBlock>
        <TextBlock.Inlines>
            <Run>You have selected </Run>
            <Run FontWeight="Bold" Text="{Binding SelectedNumber}" />
            <Run>in the previous step.</Run>
        </TextBlock.Inlines>
    </TextBlock>
</UserControl>

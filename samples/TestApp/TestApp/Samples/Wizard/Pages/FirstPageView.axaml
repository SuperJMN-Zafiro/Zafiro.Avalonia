<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wizard="clr-namespace:TestApp.Samples.Wizard"
             xmlns:pages="clr-namespace:TestApp.Samples.Wizard.Pages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TestApp.Samples.Wizard.Pages.FirstPageView"
             x:DataType="pages:FirstPageViewModel">
    <TextBox VerticalAlignment="Center" Watermark="Enter an odd number to continue" Text="{Binding Number, Mode=TwoWay}" />
</UserControl>

<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:misc="clr-namespace:Zafiro.Avalonia.Misc;assembly=Zafiro.Avalonia"
             xmlns:views="clr-namespace:Zafiro.Avalonia.Dialogs.Views;assembly=Zafiro.Avalonia.Dialogs"
             xmlns:controls="clr-namespace:Zafiro.Avalonia.Controls;assembly=Zafiro.Avalonia"
             x:Class="TestApp.App"
             RequestedThemeVariant="Default">

    <Application.Styles>
        <FluentTheme>
            <FluentTheme.Palettes>
                <!-- Light Theme with Enhanced Tonal Variety -->
                <ColorPaletteResources x:Key="Light"
                                       Accent="#FF0066CC"
                                       AltHigh="#FFFFFFFF"
                                       AltLow="#FFF8FAFB"
                                       AltMedium="#FFFCFDFE"
                                       AltMediumHigh="#FFFEFEFE"
                                       AltMediumLow="#FFFAFBFC"
                                       BaseHigh="#FF202124"
                                       BaseLow="#FFE8F4FD"
                                       BaseMedium="#FF5B9BD5"
                                       BaseMediumHigh="#FF3A6FA5"
                                       BaseMediumLow="#FF7AB8E8"
                                       ChromeAltLow="#FF456A8F"
                                       ChromeBlackHigh="#FF000000"
                                       ChromeBlackLow="#FFD6E9F7"
                                       ChromeBlackMedium="#FF2C5478"
                                       ChromeBlackMediumLow="#FF4682B4"
                                       ChromeDisabledHigh="#FFE2ECF4"
                                       ChromeDisabledLow="#FF98C3E6"
                                       ChromeGray="#FF708FA5"
                                       ChromeHigh="#FFDEEEF9"
                                       ChromeLow="#FFF5F9FC"
                                       ChromeMedium="#FFF0F6FB"
                                       ChromeMediumLow="#FFF2F7FB"
                                       ChromeWhite="#FFFFFFFF"
                                       ListLow="#FFEBF3FA"
                                       ListMedium="#FFE1EFFA"
                                       RegionColor="#FFFBFDFF" />

                <!-- Dark Theme with Enhanced Tonal Variety -->
                <ColorPaletteResources x:Key="Dark"
                                       Accent="#FF4DA3FF"
                                       AltHigh="#FF0A0A0B"
                                       AltLow="#FF000000"
                                       AltMedium="#FF050506"
                                       AltMediumHigh="#FF080809"
                                       AltMediumLow="#FF020203"
                                       BaseHigh="#FFF5F5F5"
                                       BaseLow="#FF1B2836"
                                       BaseMedium="#FF7EA8D2"
                                       BaseMediumHigh="#FF94BBE1"
                                       BaseMediumLow="#FF5E8FBB"
                                       ChromeAltLow="#FF8FB0D4"
                                       ChromeBlackHigh="#FF000000"
                                       ChromeBlackLow="#FF7897B8"
                                       ChromeBlackMedium="#FF0A0A0A"
                                       ChromeBlackMediumLow="#FF0F0F0F"
                                       ChromeDisabledHigh="#FF2A3744"
                                       ChromeDisabledLow="#FF4E6A86"
                                       ChromeGray="#FF4D6378"
                                       ChromeHigh="#FF3D5166"
                                       ChromeLow="#FF0E141C"
                                       ChromeMedium="#FF141D2B"
                                       ChromeMediumLow="#FF1C2837"
                                       ChromeWhite="#FFFFFFFF"
                                       ListLow="#FF151E2C"
                                       ListMedium="#FF1F2D3E"
                                       RegionColor="#FF060A0F" />
            </FluentTheme.Palettes>
        </FluentTheme>

        <StyleInclude Source="avares://Zafiro.Avalonia/Styles.axaml" />
        <StyleInclude Source="avares://Zafiro.Avalonia.Dialogs/Styles.axaml" />
        <StyleInclude Source="avares://Zafiro.Avalonia.DataViz/Styles.axaml" />
        <!-- <Style Selector="views|DialogControl"> -->
        <!--     <Setter Property="Width"> -->
        <!--         <Setter.Value> -->
        <!--             <OnFormFactor> -->
        <!--                 <OnFormFactor.Desktop> -->
        <!--                     <x:Double>400</x:Double> -->
        <!--                 </OnFormFactor.Desktop> -->
        <!--             </OnFormFactor> -->
        <!--         </Setter.Value> -->
        <!--     </Setter> -->
        <!-- </Style> -->
    </Application.Styles>

    <Application.DataTemplates>
        <misc:DataTemplateInclude Source="avares://Zafiro.Avalonia/DataTemplates.axaml" />
        <DataTemplate DataType="views:MessageDialogViewModel">
            <views:MessageDialogView />
        </DataTemplate>
        <misc:NamingConventionViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ControlTheme x:Key="EmptyCard" TargetType="controls:Card">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <DockPanel>
                            <StackPanel>
                                <ContentPresenter Content="{TemplateBinding Header}" HorizontalAlignment="Center" />
                                <ContentPresenter Content="{TemplateBinding Subheader}" HorizontalAlignment="Center" />
                            </StackPanel>
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </DockPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </ControlTheme>
    </Application.Resources>

</Application>
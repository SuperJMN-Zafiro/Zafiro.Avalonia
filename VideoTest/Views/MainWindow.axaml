<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:VideoTest.ViewModels"
        xmlns:l="clr-namespace:Zafiro.Avalonia.LibVLCSharp;assembly=Zafiro.Avalonia.LibVLCSharp"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VideoTest.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Video Test">
    <Design.DataContext>
		<viewModels:MainWindowViewModel/>
	</Design.DataContext>

	<ListBox Items="{Binding Videos}">
		<ListBox.ItemTemplate>
			<DataTemplate>
				<StackPanel>
					<l:VideoHost>
						<l:VideoHost.View>
							<l:VideoViewAdvanced Height="200" Width="200" Source="{Binding Source}" />
						</l:VideoHost.View>
					</l:VideoHost>
					<Button Command="{Binding Play}">Play</Button>
                </StackPanel>
			</DataTemplate>
		</ListBox.ItemTemplate>
	</ListBox>
</Window>

<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:MultiSelectorSample.Views">
  <Design.PreviewWith>
    <controls:MultiSelector />
  </Design.PreviewWith>

  <Style Selector="controls|MultiSelector">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        <CheckBox Command="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Toggle}" IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsChecked^}" ></CheckBox>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
